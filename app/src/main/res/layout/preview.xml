<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/preview"
    android:padding="10dp">



    <TextView
        android:id="@+id/journeyTracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp"
        android:text="@string/journey_tracker"
        android:textSize= "40sp"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>

    <TextView
        android:id="@+id/previewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="90dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/journeyTracker"
        android:text="@string/never_miss">

    </TextView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagePreview"
        android:layout_width="250sp"
        android:layout_height="250sp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:src="@drawable/_8f68919_2527_43bc_a575_1944302d95cf"
        app:layout_constraintTop_toBottomOf="@+id/previewDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/goButton"

        >

    </com.google.android.material.imageview.ShapeableImageView>

    <Button
        android:id="@+id/goButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text="@string/go"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColor="?attr/colorOnSecondary"
        android:textStyle="bold"
        app:strokeColor="?attr/colorOnPrimary"
        app:cornerRadius="10dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>